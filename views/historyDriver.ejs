<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Choose Rent</title>
    <%- include('../partials/navbarcss.ejs')%>
</head>
<body>
    <%- include('../partials/navbar.ejs')%>
    <center>
        <form action="" method="POST">
            <h1>Choose Driver</h1>
            <h3>Date : <%= order_date %></h3>
            <table border="1">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Car Type</th>
                    <th>Max Passenger</th>
                    <th>Licence Plat</th>
                    <th>Basic Fee</th>
                    <th>Options</th>
                </tr>
                <% datas.forEach(data => { %>
                    <tr>
                        <td><%= data.id %></td>
                        <td><%= data.name %></td>
                        <td><%= data.phone_number %></td>
                        <td><%= data.car_type %></td>
                        <td><%= data.max_passenger %></td>
                        <td><%= data.license_plate%></td>
                        <td>IDR <%= data.basic_rate %></td>
                        <td><a href="/neworder/<%=data.id%>/<%=log.userId%>/<%=order_date%>"> order</a></td>
                    </tr>
                <% }) %>
            </table>
        </form>
    </center>
</body>
</html>